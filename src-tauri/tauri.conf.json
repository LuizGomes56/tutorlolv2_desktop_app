{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tutorlolv2_desktop",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../tutorlolv2_frontend/dist",
    "devUrl": "http://localhost:8000",
    "beforeDevCommand": "cd tutorlolv2_frontend && trunk serve",
    "beforeBuildCommand": "cd tutorlolv2_frontend && trunk build --release"
  },
  "app": {
    "windows": [
      {
        "title": "tutorlolv2",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}